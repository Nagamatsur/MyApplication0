<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SensorActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="173dp">


        <TextView
            android:id="@+id/distance_text"
            android:layout_width="194dp"
            android:layout_height="55dp"
            android:layout_margin="@dimen/margin"
            android:layout_marginStart="160dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="残り距離"
            android:textSize="20pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23" />

        <TextView
            android:id="@+id/distance_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/value_default"
            android:textSize="@dimen/text_size"
            app:layout_constraintBottom_toBottomOf="@+id/distance_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/distance_text"
            app:layout_constraintTop_toTopOf="@+id/distance_text" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="195dp"
            android:layout_height="42dp"
            android:layout_margin="@dimen/margin"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="到達予測時間"
            android:textSize="13.5pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distance_text"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/time_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/value_default"
            android:textSize="@dimen/text_size"
            app:layout_constraintBottom_toBottomOf="@+id/time_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/time_text"
            app:layout_constraintTop_toTopOf="@+id/time_text" />

        <TextView
            android:id="@+id/velocity_text"
            android:layout_width="189dp"
            android:layout_height="125dp"
            android:layout_margin="@dimen/margin"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="速度"
            android:textSize="40pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/velocity_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/value_default"
            android:textSize="@dimen/text_size"
            app:layout_constraintBottom_toBottomOf="@+id/velocity_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/velocity_text"
            app:layout_constraintTop_toTopOf="@+id/velocity_text" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage" />


</android.support.constraint.ConstraintLayout>